<h1>Countdown</h1>
<h3>With Carol Vorderman & Richard Whiteley</h3>
<ul>
<% @letters.each do |letter|  %>
<li><%= letter   %></li>
<% end %>
</ul>

<form action="score" data-turbo="false" method="post">
  <label for="answer">Your guess:</label>
  <input name="letters" type="hidden" value="<%= @letters.join %>">
  <input placeholder="Guess" type="text" name="answer" autocomplete=off>
  <input type="submit">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
</form>
